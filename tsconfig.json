{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/repl/node_agnostic.js",
    "src/repl/node_agnostic.d.ts"
  ]
}